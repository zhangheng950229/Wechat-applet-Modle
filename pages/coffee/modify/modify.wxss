/* pages/list/list.wxss */

.orderinfo_wrap {
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f7f8fa;
}

.orderinfo_top {
  width: 100%;
  background: #2a8eff;
  padding-bottom: 28rpx;
  margin-bottom: 20rpx;
}

.orderinfo_header {
  color: #fff;
  width: 100%;
  padding: 0 0 0 30rpx;
  display: flex;
  /* justify-content: space-around; */
  align-items: center;
  box-sizing: border-box;
}

.icon-fanhui {
  /* display: inline-block; */
  float: left;
  font-size: 36rpx;
}

.orderinfo_header text {
  text-align: center;
  font-size: 40rpx;
  padding: 38rpx 40rpx 38rpx 0;
  flex: 1;
}

.info_main {
  flex: 1;
  overflow-y: scroll;
}

.model_head {
  padding: 30rpx 0 0 18rpx;
  font-size: 40rpx;
  font-weight: 600;
  background: #fff;
}

.modle {
  background: #fff;
  margin-bottom: 30rpx;
}

.modle:last-of-type {
  margin-bottom: 0;
}

.order_info_modle {
  padding: 20rpx 26rpx 20rpx 26rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #f7f8fa;
  box-sizing: border-box;
  color: #9e9eaa;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.order_info_modle label {
  width: 50%;
  padding-left: 50rpx;
  position: relative;
}

.order_info_modle label:not(.dis)::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 8px;
  transform: translate(0, -50%);
  width: 10rpx;
  height: 10rpx;
  background: #2a8eff;
  box-shadow: 0 0 0 5rpx #2a8eff;
  border-radius: 50%;
}

.icon-dian:before {
  font-size: 64rpx;
  color: #2a8eff;
  vertical-align: middle;
}

.order_info_modle text {
  width: 50%;
  color: #212a53;
}

.edit_modle {
  align-items: flex-start;
}

.edit_modle view {
  width: 60%;
  display: flex;
}

.edit_modle view textarea {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  padding: 10rpx;
  vertical-align: top;
  border: 2rpx solid #9e9eaa;
  border-radius: 16rpx;
}

.model_head {
  text-align: center;
  padding: 30rpx 0 0 18rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.edit_modle view input {
  width: 60%;
  border-bottom: 1px solid #9e9eaa;
}

/* pages/login/login.wxss */
.login_wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;

}

.login_banner{
  display: block;
  width: 82%;
  margin: 40rpx auto 0;
}
.login_titile{
  display: block;
  width: 60%;
  margin: 50rpx auto;
}






.login_main{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 70%;
  margin: 0 auto;
}
.login_main view{
  margin-bottom: 30rpx;
  display: flex;
  align-content: center;
  border-bottom: 2rpx solid #1d2b50;
  padding-bottom: 6rpx;
}
.login_main view input{
  flex: 1;
}
.login_main view image{
  width: 28rpx;
  margin-right: 20rpx;
}

.login_btn{
  width: 76%;
  background: #006cd9;
  color: #fff;
  border-radius: 100rpx;
  margin-top: 60rpx;
}






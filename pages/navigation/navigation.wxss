/* pages/navigation/navigation.wxss */

.container{
  width: 100%;
  height: 100%;
  background: #f7f8fa;
  font-size: 28rpx;
}

.nav_wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}


.user_info{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 30rpx ;
}
.sign_out_btn{
  margin:0 20rpx 0 20rpx;
  font-size: 32rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #2a8eff;
  color: #fff;
  border-radius: 10rpx;
}


.nav_header{
  padding: 50rpx 0;
  text-align: center;
  font-size: 58rpx;
}



/* 导航页列表 */
.nav_main{
  background: #2a8eff;
  box-shadow: -10rpx -10rpx 10rpx #e3e3e5;
  flex: 1;
}
.nav_list{
  background: #fff;
}
.nav_opt{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e2e2e4;
}
.opt_logo{
  width: 120rpx;
  vertical-align: middle;
  padding-right: 20rpx;
}

.opt_title{
  font-size: 44rpx;

}

.opt_r{
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.machines_num{
  font-size: 40rpx;
  padding-left: 40rpx;

}
.opt_but_wrap button{
  height: 64rpx;
  background: #2a8eff;
  color: #fff;
  line-height: 64rpx;
  border-radius: 20rpx;
}
.opt_but_wrap button:nth-of-type(1){
  margin-bottom: 20rpx;
}




























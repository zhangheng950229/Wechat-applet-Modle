<view class="section" style="width: 100%;">
  <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" range-key="name" style="width: 100%;">
    <button class="picker">
      {{multiArray[0][multiIndex[0]].name}}  {{multiArray[1].length > 0 ?(multiArray[1][multiIndex[1]].name):""}}  {{multiArray[2].length > 0 ?(multiArray[2][multiIndex[2]].name):""}}
    </button>
  </picker>
</view>